<!doctype html>
<html lang="en"><head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v3.8.5">
    <title>Api Keys | Datar</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.3/examples/sign-in/">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


    <style></style>
    <!-- Custom styles for this template -->
    <link href="/css/loginSignup.css" rel="stylesheet">
    <style>
    body {
      background-color: #f5f5f5;
    }

    .container {
      padding-top: 40px;
      padding-bottom: 40px;
    }

    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <img src="/img/logo.png" width="30" height="30" alt="">
      <a class="navbar-brand" href="#">Datar</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a href="/logout" class="btn btn-outline-danger" role="button">Logout</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container h-100">
      <div class="row align-items-center h-100">
          <div class="col-xl-6 col-lg-6 col-md-12 mx-auto">
            <% if (locals.errors) { %>
              <div class="alert alert-danger" role="alert">
                <%- locals.errors %>
              </div>
            <% } %>
            <% if (locals.middle) { %>
              <div class="alert alert-dark" role="alert">
                <%- locals.middle %>
              </div>
            <% } %>
            <% if (locals.success) { %>
              <div class="alert alert-success" role="alert">
                <%- locals.success %>
              </div>
            <% } %>
            <nav class="navbar navbar-light bg-light mb-3">
              <span class="navbar-brand mb-0 h1">Keys</span>
              <ul class="navbar-nav mr-auto">
              </ul>
              <ul class="navbar-nav">
                <li class="nav-item active">
                  <form method="post" action="/key/create">
                    <button class="btn btn-outline-success" role="button">Get New Key</button>
                  </form>
                </li>
              </ul>
            </nav>
            <% if (keys.length === 0) { %>
              <div class="card mb-3" id="<%= i %>-show">
                <div class="card-body">
                  No API Keys...
                </div>
              </div>
            <% } %>
            <% for (var i = 0; i < keys.length; i++) { %>
            <form class="ml-auto d-none" id="<%= i %>-edit" method="post" action="/key/<%= keys[i].key %>/update">
              <div class="card mb-3">
                  <div class="card-header py-3 d-flex align-items-center">
                      <div class="mr-auto"></div>
                      <button class="btn btn-primary btn-sm mr-1" type="submit" role="button">Save</button>
                      <button class="btn btn-danger btn-sm" type="button" role="button" onclick="toogleKey(<%= i %>)">Cancel</button>
                  </div>
                  <div class="card-body">
                    <div class="form-group row">
                      <label for="staticTitle" class="col-sm-2 col-form-label">Title</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" id="staticTitle" name="title" placeholder="Application" value="<%= keys[i].title %>">
                      </div>
                    </div>
                    <div class="form-group row">
                      <div class="col-sm-12">
                        <div class="custom-control custom-switch">
                          <input type="checkbox" class="custom-control-input" id="staticToogle-<%= i %>" name="enabled" <%- keys[i].enabled == true ? 'checked' : '' %>>
                          <label class="custom-control-label" for="staticToogle-<%= i %>">Enabled</label>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>
            </form>
            <div class="card mb-3" id="<%= i %>-show">
              <div class="card-header py-3 d-flex align-items-center">
                <h6 class="mb-0 text-muted"><%= keys[i].title %></h6>
                <% if (keys[i].enabled) {  %>
                  <span class="badge badge-success ml-1 px-2">Enabled</span>
                <% } else {  %>
                  <span class="badge badge-danger ml-1 px-2">Disabled</span>
                <% } %>
                <button class="ml-auto btn btn-info btn-sm" role="button" onclick="toogleKey(<%= i %>)">Edit</button>
              </div>
              <div class="card-body">
                <small class="text-muted" >Created <%= timeSince(keys[i].createdAt) %> ago</small>
                <p id="<%= keys[i].key %>"><%= keys[i].key %></p>
                <form method="post" action="/key/delete">
                  <a href="#" onclick="copyToClipboard('<%= keys[i].key %>')" class="btn btn-outline-primary" role="button">Copy to clipboard</a>
                  <input type="hidden" id="key" name="key" value="<%= keys[i].key %>">
                  <% if (keys[i].enabled) {  %>
                    <button class="btn btn-danger" role="button" disabled title='Please disable key to destroy it'>Destroy</button>
                  <% } else {  %>
                    <button class="btn btn-danger" role="button">Destroy</button>
                  <% } %>
                </form>
              </div>
            </div>
            <% } %>
          </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script>
      function copyToClipboard(key) {
        var textArea = document.createElement("textarea");

        textArea.value = key;

        document.body.appendChild(textArea);
        textArea.focus();
        textArea.select();

        try {
          document.execCommand('copy');
        } catch (err) {}

        document.body.removeChild(textArea);
      }
      function toogleKey(id) {
        var editElement = document.getElementById(id + '-edit');
        var showElement = document.getElementById(id + '-show');
        editElement.classList.toggle("d-none");
        showElement.classList.toggle("d-none");
      }
    </script>
  </body>
</html>
