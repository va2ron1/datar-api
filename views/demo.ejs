  <body>
    <div class="container h-100">
      <div class="row align-items-center h-100">
        <div class="col-6 mx-auto text-center">
          <img class="mb-4" src="/img/logo.png" alt="" width="72" height="72">
          <% if (locals.errors) { %>
            <div class="alert alert-danger" role="alert">
              <%- locals.errors %>
            </div>
          <% } %>
          <% if (locals.success) { %>
            <div class="alert alert-success" role="alert">
              <%- locals.success %>
            </div>
          <% } %>
          <div class="row">
            <div class="col-sm">
              <form class="form-signin gray-border" method="post" action="/postData">
                <h1 class="h3 mb-3 font-weight-normal">Post Data</h1>
                <textarea name="data" placeholder="Input text..." rows="3" required="" autofocus=""></textarea>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Send data</button>
              </form>
            </div>
            <div class="col-sm">
              <form class="form-signin" method="post" action="/search">
                <h1 class="h3 mb-3 font-weight-normal">Search</h1>
                <input type="text" name="search" class="form-control mb-2" placeholder="Searching for..." required="" autofocus="">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Search</button>

                <% if (locals.results) { %>
                  <% for (var i = 0; i < locals.results.length; i++) { %>
                    <div class="alert alert-info mt-2 mb-2" role="alert">
                      <%= locals.results[i]._source.data %>
                    </div>
                  <% } %>
                <% } %>
              </form>
            </div>
          </div>
          <p class="mt-5 mb-3 text-muted">Â© Datar 2019</p>
        </div>
      </div>
