    <style>
    html,
    body {
      height: 100%;
    }

    body {
      display: flex;
      align-items: center;
      padding-top: 40px;
      padding-bottom: 40px;
      background-color: #f5f5f5;
    }
    .gray-border textarea {
      border: 1px solid #e5e5e5;
      border-radius: .25rem;
    }
    .gray-border .form-control:focus {
        border: 1px solid #e5e5e5;
        box-shadow: 0 0 0 0.2rem rgba(186, 104, 200, .25);
    }
